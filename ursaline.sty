%---ENV---%

\newenvironment{halftitle}
{
	\thispagestyle{cleared}
	%begin_def
	\begin{vplace}[0.3]

		\begin{center}
			}
			{
		\end{center}
	\end{vplace}
	\clearpage{}
}

\newenvironment{frontispiece}
{

	\thispagestyle{cleared}
	%begin_def
	\begin{vplace}[2]

		\begin{center}
			}
			{
		\end{center}
	\end{vplace}
	\clearpage
}

\newenvironment{editionnotice}
{
	\thispagestyle{cleared}
	\begin{vplace}
		\begin{center}
			\pgfornament[width=2cm]{80}
			\vspace*{3em}

			}
			{
		\end{center}
	\end{vplace}
	\clearpage
}

\newenvironment{dedication}
{
	\thispagestyle{cleared}
	\begin{vplace}
		\begin{center}
			\begin{minipage}[c][][s]{0.75\textwidth}
				\emph{Author's Dedication}\\*
				\\
				}
				{
			\end{minipage}
		\end{center}
	\end{vplace}
	\clearpage
}

